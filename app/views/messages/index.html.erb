<h1>Messages</h1>

<ul>
  <% @messages.each do |message| %>
    <li><%= link_to message.id, message_path(message) %></li>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to "New message", new_message_path, id: "new_link", remote: true %>
<% end %>
<br>
<% if user_signed_in? %>
  <%= link_to "Phone Book", contact_path(@user) %>
<% end %>
